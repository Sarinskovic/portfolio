---
import { INSTAGRAM_URL, LINKEDIN_URL } from "../consts";

const menu = [
  { path: "/", label: "Home" },
  { path: "/contact-me", label: "Contact Me!" },
];
const open = false;
---

<header
  x-cloak
  x-data=`{ open: ${open} }`
  class={`fixed left-0 top-0 z-50 w-full bg-sunshade-50 shadow-md`}
>
  <div class="container mx-auto w-full">
    <div class="flex w-full flex-wrap items-center justify-between p-4">
      <a class="z-10 flex basis-1/3" href={import.meta.env.BASE_URL}>
        <img src="/portfolio/logo.svg" class="h-12 w-fit" alt="logo" />
      </a>
      <button
        aria-controls="navbar-menu"
        data-collapse-toggle="navbar-menu"
        class="z-50 flex basis-2/3 justify-end sm:hidden"
        aria-label="Toggle Menu"
        @click="open = !open"
      >
        <svg
          id="close-icon"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-8 w-8"
          x-show="open"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 18L18 6M6 6l12 12"></path>
        </svg>
        <svg
          id="menu-icon"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="h-8 w-8 rotate-180"
          x-show="!open"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M3.75 6.75h16.5M3.75 12H12m-8.25 5.25h16.5"></path>
        </svg>
      </button>
      <div
        x-cloak
        x-show="open"
        x-transition
        id="navbar-menu"
        class={`menu fixed left-0 top-0 w-full h-svh basis-2/3 sm:justify-end bg-black/65 text-lg text-apricot-200 sm:static sm:flex sm:h-fit sm:bg-transparent`}
      >
        <ul
          class={`flex w-full flex-col gap-6  bg-sunshade-50 pb-8 pt-16 sm:w-fit sm:flex-row sm:py-0`}
        >
          {
            menu.map((item) => (
              <li class="w-full text-center sm:w-fit sm:bg-transparent">
                <a
                  class={`font-elza tracking-wider decoration-wavy decoration-2 underline-offset-8 hover:underline`}
                  href={item.path}
                >
                  {item.label}
                </a>
              </li>
            ))
          }
          <li
            class="flex gap-4 w-full justify-center sm:w-fit sm:bg-transparent"
          >
            <a href={INSTAGRAM_URL} target="_blank">
              <span class="sr-only">Follow Me on Instagram</span>
              <img src="/portfolio/social/instagram.svg" alt="Instagram" />
            </a>
            <a href={LINKEDIN_URL} target="_blank">
              <span class="sr-only">Follow me on Linkedin</span>
              <img src="/portfolio/social/linkedin.svg" alt="Linkedin" />
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <style>
    [x-cloak] {
      display: none !important;
    }
    .menu {
      @apply sm:flex !important;
    }
  </style>
</header>
